<section class="orders-show">
  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <table class="table table-bordered">
  <thead>
    <tr>
      <th colspan="2">Product</th>
      <th>Quantity</th>
      <th>Subtotal</th>
    </tr>
  </thead>
  <tbody>
  <% @order.line_items.product.each do |orders|%>
   
    <tr>
    <td>
    <% @order_items = Product.find_by(id: orders[0]["product_id"]) %>
    <%= image_tag @order_items.image.tiny %>
    </td>
    <td>
    <h4><%= @order_items.name %></h4>
    <br>
    <p><%= @order_items.description %><p>
    </td>
    <td>
      <%= orders[0]["quantity"] %>
    </td>
    <td>
     <%= humanized_money_with_symbol orders[0]["total_price_cents"]/100.0 %>
    </td>
    </tr>
    <% end %>
  
  </tbody>
  <tfoot>
    <tr>
      <th colspan="3">
        TOTAL:
      </th>
      <th>
      <%= humanized_money_with_symbol @order.total_cents/100.0 %>
      </th>
    </tr>
  </tfoot>
</table>
    


  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>
  
 <p> <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %> </p>
 <br>
  
  </section>
